  <div id="card">
    <h4>Card</h4>

    <ul class="grid list-unstyled" role="list">
      <li>
        <h5>Article card</h5>
        <div class="card">
          <div
            class="media"
            style="--width: {{ article.image.width | default: 100 }}; --height: {{ article.image.height | default: 100 }};"
          >
            {{ 'image' | placeholder_svg_tag }}
          </div>
          <h2>
            <a href="#">Article title</a>
          </h2>
          <p>Article excerpt</p>
        </div>
      </li>
      <li>
        <h5>Collection card</h5>
        <div class="card">
          <div
            class="media"
            style="--width: {{ collection.image.width | default: 100 }}; --height: {{ collection.image.width | default: 100 }};"
          >
            {{ 'collection-1' | placeholder_svg_tag }}
          </div>
          <h2>
            <a href="#">Collection title</a>
          </h2>
        </div>
      </li>
      <li>
        <h5>Product card</h5>
        <div class="card">
          <div
            class="media"
            style="--width: {{ product.featured_media.width | default: 100 }}; --height: {{ product.featured_media.height | default: 100 }};"
          >
            {{ 'product-1' | placeholder_svg_tag }}
          </div>
          <h2>
            <a href="#">Product title</a>
          </h2>
          <small>Product vendor</small>
          {%- render 'price', product: product -%}
        </div>
      </li>
    </ul>
  </div>

