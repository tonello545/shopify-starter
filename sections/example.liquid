          <div
            class="media"
            style="--width: {{ article.image.width | default: 100 }}; --height: {{ article.image.height | default: 100 }};"
          >
            {{ 'product-' | append: i | placeholder_svg_tag }}
          </div>
          <h5>Grid item</h5>
        </div>
      {% endfor %}
